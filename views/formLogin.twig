
{% block stylesheet %}
    <link type="text/css"  href="views/forms.css" rel="stylesheet" >
   
{% endblock %}
{% block script %}
    <script src="https://kit.fontawesome.com/2a2e68ce16.js" crossorigin="anonymous"></script>

{% endblock %}



{% block body %}
    <div class="iconBack">
        <a href="?c=index&t=index"><i class="fa-solid fa-xmark"></i></a>
    </div>
    <form action="?c=user&t=openSession" method="POST">
        <h1>Connexion Ã  L.K. Projects</h1>
        <div class="icon">
            <i class="fas fa-user-circle"></i>
        </div>
        {% if alertLogin  == true %}  <!-- Erreur de connexion  -->
            <p class=alert>Nom d'utilisateur ou mot de passe incorrect !</p>
        {% endif %}
        <div class="formcontainer">
            <label><span>Nom d'utilisateur</span></label>
            <input type="text" placeholder="Entrer le nom d'utilisateur" name="username" required>
            <label><span>Mot de passe</span></label>
            <input type="password" placeholder="Entrer votre mot de passe" name="password" required>
            <button type="submit"><strong>CONNEXION</strong></button>
        </div>
    </form>
    
    
     
 {% endblock %}
 